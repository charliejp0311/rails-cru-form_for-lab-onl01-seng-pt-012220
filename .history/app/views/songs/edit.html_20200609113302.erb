<h1>Song Update</h1>
<% if @song.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@song.errors.count, "error") %>
      prohibited this song from being saved:
    </h2>
 
    <ul>
    <% @song.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_for @song do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :genre_id %><br>
    <%= f.text_field :genre_id %><br>
    <%= f.label :artist_id %><br>
    <%= f.text_field :artist_id %><br>
    <%= f.submit %>
<% end %>
